{
  "name": "@newhighsco/destiny-clan-warfare",
  "description": "Destiny Clan Warfare",
  "version": "6.0.0",
  "author": "New High Score <hello@newhighsco.re>",
  "license": "ISC",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/newhighsco/destiny-clan-warfare.git"
  },
  "homepage": "https://destinyclanwarfare.com/",
  "bugs": {
    "url": "https://github.com/newhighsco/destiny-clan-warfare/issues"
  },
  "files": [],
  "scripts": {
    "clean": "rm -rf {.next,public/{robots.txt,sitemap.xml}}",
    "start": "npm-run-all --parallel start:ssl start:next",
    "start:next": "next dev --hostname localhost.destinyclanwarfare.com --port 9000",
    "start:ssl": "local-ssl-proxy --hostname localhost.destinyclanwarfare.com --source 9001 --target 9000",
    "start:storybook": "start-storybook --host localhost.destinyclanwarfare.com --port 9002 --static-dir public --docs --no-manager-cache",
    "build": "next build",
    "postbuild": "next-sitemap",
    "prebuild:storybook": "rm -rf storybook",
    "build:storybook": "build-storybook --output-dir storybook --static-dir public --docs --quiet",
    "serve": "next start",
    "test": "yarn lint",
    "snapshot": "chromatic --storybook-build-dir storybook --auto-accept-changes main --exit-once-uploaded",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint --cache --ext .js,.json,.jsx,.mdx.ts,.tsx .",
    "lint:css": "stylelint '**/*.{css,scss}' --cache",
    "lint:ts": "tsc --noEmit",
    "format": "npm-run-all --parallel format:*",
    "format:js": "yarn lint:js --fix",
    "format:css": "yarn lint:css --fix"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "4.0.3",
    "@newhighsco/chipset": "6.12.0",
    "@newhighsco/next-plugin-svgr": "3.0.28",
    "@newhighsco/press-start": "2.1.0",
    "bungie-api-ts": "4.11.0",
    "next": "11.1.2",
    "next-auth": "3.29.0",
    "next-compose-plugins": "2.2.1",
    "next-sitemap": "1.6.189",
    "next-transpile-modules": "8.0.0",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-preset-env": "6.7.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "sass": "1.43.2",
    "sentence-case": "3.0.4"
  },
  "devDependencies": {
    "@babel/core": "7.15.8",
    "@commitlint/cli": "13.2.1",
    "@netlify/plugin-nextjs": "4.0.0-beta.2",
    "@newhighsco/browserslist-config": "1.0.3",
    "@newhighsco/commitlint-config": "1.0.16",
    "@newhighsco/editor-config": "1.1.2",
    "@newhighsco/eslint-config": "2.3.32",
    "@newhighsco/postcss-config": "3.4.6",
    "@newhighsco/prettier-config": "2.0.14",
    "@newhighsco/release-config": "1.0.73",
    "@newhighsco/storybook-preset": "4.3.18",
    "@newhighsco/stylelint-config": "2.0.48",
    "@storybook/react": "6.3.12",
    "@types/react": "17.0.30",
    "@typescript-eslint/eslint-plugin": "5.1.0",
    "@typescript-eslint/parser": "5.1.0",
    "babel-loader": "8.2.2",
    "chromatic": "6.0.4",
    "eslint": "7.32.0",
    "husky": "7.0.2",
    "local-ssl-proxy": "1.3.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "semantic-release": "18.0.0",
    "stylelint": "13.13.1",
    "typescript": "4.4.4",
    "webpack": "5.59.0"
  },
  "browserslist": [
    "extends @newhighsco/browserslist-config"
  ],
  "commitlint": {
    "extends": [
      "@newhighsco"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@newhighsco/eslint-config/react"
    ],
    "rules": {
      "no-use-before-define": "off",
      "@typescript-eslint/no-use-before-define": [
        "error"
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.ts?(x)"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
          "@typescript-eslint"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended"
        ]
      }
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint"
    }
  },
  "prettier": "@newhighsco/prettier-config",
  "release": {
    "extends": "@newhighsco/release-config",
    "branches": [
      "main"
    ]
  },
  "renovate": {
    "extends": [
      "@newhighsco"
    ],
    "baseBranches": [
      "next"
    ]
  },
  "stylelint": {
    "extends": [
      "@newhighsco/stylelint-config"
    ]
  }
}
