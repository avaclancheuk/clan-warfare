{
  "name": "destiny-clan-warfare",
  "description": "Destiny Clan Warfare",
  "version": "2.7.0",
  "author": "Avalanche UK <admins@avaclanche.uk>",
  "license": "ISC",
  "engines": {
    "node": "^8.9.0",
    "yarn": "^1.3.2"
  },
  "scripts": {
    "start": "npm-run-all --parallel start:*",
    "start:dev": "react-static start",
    "start:storybook": "start-storybook -p 9001 -c .storybook",
    "build": "npm-run-all build:production",
    "build:staging": "npm run build:production -- --staging",
    "build:production": "node --max-old-space-size=8192 ./node_modules/.bin/react-static build",
    "clean": "rm -rf public",
    "serve": "serve ./public -p 9000",
    "optimize": "npm-run-all optimize:*",
    "optimize:svg": "find ./src -type f -name '*.svg' -print0 | xargs -0 -n 1 -P 6 svgo --enable=removeXMLNS --enable=removeTitle --enable=removeStyleElement --multipass",
    "optimize:images": "imagemin src/images/* --out-dir=src/images",
    "optimize:static": "imagemin static/* --out-dir=static",
    "qa": "npm-run-all --parallel qa:*",
    "qa:lint": "eslint --cache -f unix .",
    "qa:stylint": "stylint ./src",
    "test": "npm-run-all qa",
    "deploy": "npm-run-all build deploy:firebase",
    "deploy:firebase": "firebase deploy --non-interactive --token $FIREBASE_TOKEN"
  },
  "dependencies": {
    "autoprefixer": "^7.2.3",
    "autoprefixer-stylus": "^0.14.0",
    "axios": "^0.16.2",
    "babel-polyfill": "^6.26.0",
    "camelcase-keys": "^4.1.0",
    "classnames": "^2.2.5",
    "css-loader": "^0.28.11",
    "dotenv": "^5.0.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "fs-extra": "^4.0.2",
    "linkify-urls": "^1.4.0",
    "moment": "^2.19.2",
    "multi-sort": "^1.0.1",
    "netlify-identity-widget": "^1.2.0",
    "nprogress": "^0.2.0",
    "number-to-words": "^1.2.3",
    "pascal-case": "^2.0.1",
    "poststylus": "^1.0.0",
    "query-string": "^5.0.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-router": "^4.2.0",
    "react-static": "^5.7.1",
    "responsive-grid": "^1.1.0",
    "rss": "^1.2.2",
    "sentence-case": "^2.1.1",
    "style-loader": "^0.20.3",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "stylus-mixins": "^0.4.0",
    "svg-react-loader": "^0.4.5",
    "svgo": "^1.0.3",
    "uuid": "^3.1.0",
    "yarn": "^1.3.2"
  },
  "devDependencies": {
    "@storybook/addon-options": "^3.4.0",
    "@storybook/react": "^3.4.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-jsx": "^4.0.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.0.1",
    "eslint-plugin-standard": "^3.0.1",
    "firebase-tools": "^3.17.4",
    "imagemin-cli": "^3.0.0",
    "npm-run-all": "^4.1.1",
    "serve": "^6.1.0",
    "stylint": "^1.5.9"
  }
}
