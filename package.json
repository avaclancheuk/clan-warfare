{
  "name": "@newhighsco/destiny-clan-warfare",
  "description": "Destiny Clan Warfare",
  "version": "6.0.0",
  "author": "New High Score <hello@newhighsco.re>",
  "license": "ISC",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/newhighsco/destiny-clan-warfare.git"
  },
  "homepage": "https://destinyclanwarfare.com/",
  "bugs": {
    "url": "https://github.com/newhighsco/destiny-clan-warfare/issues"
  },
  "files": [],
  "scripts": {
    "prepare": "husky install",
    "clean": "rm -rf {.next,public/{robots.txt,sitemap*.xml}}",
    "start": "npm-run-all --parallel start:ssl start:next",
    "start:next": "next dev --hostname localhost.destinyclanwarfare.com --port 9000",
    "start:ssl": "local-ssl-proxy --hostname localhost.destinyclanwarfare.com --source 9001 --target 9000",
    "start:storybook": "start-storybook --host localhost.destinyclanwarfare.com --port 9002 --docs --no-manager-cache",
    "build": "next build",
    "postbuild": "next-sitemap",
    "prebuild:storybook": "rm -rf storybook",
    "build:storybook": "build-storybook --output-dir storybook --docs --quiet",
    "serve": "next start",
    "pretest": "yarn lint",
    "test": "jest",
    "snapshot": "chromatic --storybook-build-dir storybook --auto-accept-changes main --exit-once-uploaded",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint --cache --ignore-path .gitignore --ext .js,.json,.jsx,.mdx.ts,.tsx .",
    "lint:css": "stylelint '**/*.{css,scss}' --cache --ignore-path .gitignore",
    "format": "npm-run-all --parallel format:*",
    "format:js": "yarn lint:js --fix",
    "format:css": "yarn lint:css --fix"
  },
  "dependencies": {
    "@newhighsco/chipset": "6.13.7",
    "@newhighsco/next-plugin-svgr": "3.0.44",
    "@newhighsco/press-start": "2.1.4",
    "bungie-api-ts": "4.15.0",
    "dayjs": "1.11.0",
    "next": "12.1.0",
    "next-auth": "3.29.1",
    "next-compose-plugins": "2.2.1",
    "next-sitemap": "2.5.14",
    "next-transpile-modules": "9.0.0",
    "param-case": "3.0.4",
    "postcss": "8.4.12",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "sass": "1.49.9",
    "sentence-case": "3.0.4"
  },
  "devDependencies": {
    "@babel/core": "7.17.8",
    "@commitlint/cli": "16.2.3",
    "@netlify/plugin-nextjs": "4.3.0",
    "@newhighsco/browserslist-config": "1.0.3",
    "@newhighsco/commitlint-config": "1.0.24",
    "@newhighsco/editor-config": "1.1.2",
    "@newhighsco/eslint-config": "3.1.19",
    "@newhighsco/postcss-config": "3.4.72",
    "@newhighsco/prettier-config": "2.0.17",
    "@newhighsco/release-config": "1.1.6",
    "@newhighsco/storybook-preset": "4.4.25",
    "@newhighsco/stylelint-config": "3.0.21",
    "@storybook/builder-webpack5": "6.4.19",
    "@storybook/manager-webpack5": "6.4.19",
    "@storybook/react": "6.4.19",
    "@testing-library/jest-dom": "5.16.2",
    "@testing-library/react": "12.1.4",
    "@types/jest": "27.4.1",
    "@types/react": "17.0.42",
    "babel-loader": "8.2.4",
    "chromatic": "6.5.3",
    "eslint": "8.11.0",
    "eslint-plugin-jest-dom": "4.0.1",
    "eslint-plugin-testing-library": "5.1.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "local-ssl-proxy": "1.3.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.0",
    "semantic-release": "19.0.2",
    "stylelint": "14.6.0",
    "typescript": "4.6.2",
    "webpack": "5.70.0"
  },
  "browserslist": [
    "extends @newhighsco/browserslist-config"
  ],
  "commitlint": {
    "extends": [
      "@newhighsco"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@newhighsco/eslint-config"
    ],
    "overrides": [
      {
        "files": [
          "**/*.spec.ts?(x)"
        ],
        "plugins": [
          "testing-library",
          "jest-dom"
        ],
        "rules": {
          "testing-library/no-container": "off",
          "testing-library/no-node-access": "off"
        },
        "extends": [
          "plugin:testing-library/react",
          "plugin:jest-dom/recommended"
        ]
      }
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint"
    }
  },
  "prettier": "@newhighsco/prettier-config",
  "release": {
    "extends": "@newhighsco/release-config",
    "branches": [
      "main"
    ]
  },
  "renovate": {
    "extends": [
      "@newhighsco"
    ],
    "baseBranches": [
      "next"
    ]
  },
  "stylelint": {
    "extends": [
      "@newhighsco/stylelint-config"
    ]
  }
}
