//
// GRID
// ====
// Reference: https://github.com/clocklimited/responsive-grid
//

$grid--gutter = $spacing--default

//
// BASE GRID STYLES
//

grid-base()

//
// GRID WIDTHS
// Only add widths when required, to keep compiled CSS clean
//

grid-widths('', 2)

+width-min($mq--tablet)
  grid-widths('tablet', 2)

//
// GRID MODIFIERS
//

grid-gutter-modifier('gutterless', 0)
grid-gutter-modifier('gutter-pixel', 1px)
grid-gutter-modifier('gutter-double', $spacing--double)

grid-reverse()

.grid--middled
  > .grid__item
    vertical-align middle

.grid--bottomed
  > .grid__item
    vertical-align bottom

.grid--flex
  display flex
  flex-wrap wrap
