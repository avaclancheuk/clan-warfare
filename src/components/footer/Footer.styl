.footer
  background $color--nero
  border-top 1px solid $color--eclipse
  color $color--white
  margin-top spacing(2)
  padding spacing(4) 0 spacing(1)
  position relative

  +width-min($mq--tablet)
    margin-top spacing(3)
    padding-top spacing(3)

  +width-min($mq--tablet--landscape)
    padding-top spacing(1)

.footer__list
  color $color--silver
  padding spacing(1) 0
  text-align center
  text-transform uppercase

  +width-min($mq--tablet)
    text-align right

.footer__item
  margin 0 spacing(0.5) !important // @stylint ignore

  +width-min($mq--tablet)
    margin 0 !important // @stylint ignore

    & + &
      margin-left spacing(1) !important // @stylint ignore

.footer__link
  display block
  font-size smaller
  letter-spacing 0.4em

  &:after
    content ''
    display block
    border-bottom 1px solid transparent
    margin-right 0.4em

  &[href]:focus
  &[href]:hover
    &:after
      border-color $color--terracotta

.footer__logo
  margin 0 auto
  position absolute
  left 0
  right 0
  top spacing(-2)
  text-align center
  transition margin 0.25s
  width rem(70)

  .logo-icon
    fill $color--silver

  &:hover
    margin-top spacing(-0.5)

    .logo-icon
      fill $color--white
