.card
  background $color--white
  background-color rgba($color--white, 0.95)
  box-shadow 0 $spacing--default $spacing--double rgba($color--black, 0.5), 0 $spacing--half $spacing--half rgba($color--black, 0.25)
  color $color--nero
  margin-bottom $spacing--double
  padding $spacing--default

  &:last-child
    margin-bottom 0

  +width-min($mq--tablet)
    padding $spacing--double
