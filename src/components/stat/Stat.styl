.stat
  text-align center

  &:hover
    transform scale(1.1)

.stat__label
  border-bottom 1px solid $color--silver
  display inline-block
  font-size smaller
  line-height 1
  text-transform uppercase
  padding 0 0 $spacing--quarter

.stat__label--simple
  border 0
  font-size small
  max-width rem(100)
  padding $spacing--quarter 0 0
  text-transform none

.stat__value
  font-size rem(45)
  font-weight bold
  line-height 1

.stat-list
  text-align center

  > li
    vertical-align top

  .stat
    margin $spacing--half $spacing--default
