.stat
  text-align center

  &:hover
    transform scale(1.1)

.stat__label
  border-bottom 1px solid $color--silver
  display inline-block
  font-size small
  line-height 1
  text-transform uppercase
  overflow hidden
  padding 0 0 0.1em
  text-overflow ellipsis

  +width-min($mq--tablet)
    font-size smaller

.stat__label--simple
  border 0
  font-size small
  margin $spacing--quarter auto 0
  max-height 1em
  max-width rem(120)
  overflow hidden
  padding 0
  text-overflow ellipsis
  text-transform none
  display -webkit-box
  -webkit-line-clamp 1
  -webkit-box-orient vertical

.stat__value
  font-size rem(40)
  font-weight bold
  line-height 1

  +width-min($mq--tablet)
    font-size rem(50)

.stat-list
  > li
    vertical-align top

  .stat
    margin $spacing--quarter $spacing--default

    +width-min($mq--tablet)
      margin $spacing--half $spacing--default
