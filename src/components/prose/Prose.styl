.prose
  > * + *
    margin-top $spacing--default

  h2
    font-size 1.2em


  h2, h3
    font-weight bold
    margin-bottom ($spacing--default * -1)

    &:last-child
      margin-bottom 0

    &:hover
      .anchor
        opacity 1

  a[href]
    text-decoration underline

    &:hover
    &:focus
      text-decoration-color $color--terracotta

  .anchor
    color $color--terracotta
    float left
    margin-left ($spacing--default * -1)
    opacity 0
    text-align center
    text-decoration none !important // @stylint ignore
    width $spacing--default
    height 1em

    &:before
      content '#'
