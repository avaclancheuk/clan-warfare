.medal
  fill $color--black
  position relative
  width rem(60)

  &:hover
    transform scale(1.1)

  +width-min($mq--tablet)
    width rem(75)

.medal__layer
  position absolute
  top 0
  left 0

.medal__highlight
  fill $color--white
  opacity 0.1

.medal--tier-1
  .background
    fill $color--silver

  .foreground
    fill $color--terracotta

.medal--tier-2
  .background
    fill $color--eclipse

  .foreground
    fill $color--equator

.medal--tier-3
  .background
    fill $color--black

  .foreground
    fill $color--lemon

.medal-list
  text-align center

  .medal
    margin $spacing--half
