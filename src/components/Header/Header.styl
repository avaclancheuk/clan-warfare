.header
  background url('../images/header.jpg')
  background-position 50% 0
  background-size cover
  margin-bottom $spacing--default * 2
  padding $spacing--default 0
  position relative

  +width-min($mq--tablet)
    margin-bottom $spacing--default * 4
    padding ($spacing--default * 2) 0

.header__container
  position relative
  z-index 2

.header__logo
  display inline-block
  vertical-align middle
  margin-bottom $spacing--default * -2

  +width-min($mq--tablet)
    margin-bottom $spacing--default * -4

.header__logo-icon.logo-icon
  display none
  opacity 0.25
  position absolute
  top $spacing--default * -1
  right $spacing--default

  +width-min($mq--tablet)
    display block

.header__logo-lockup.logo-lockup
  +width-min($mq--desktop)
    font-size 40px
