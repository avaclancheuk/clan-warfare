//
// TOOLTIP
// ============
//

$tooltip--width = rem(250)

.tooltip
  display inline-block
  position relative

.tooltip__trigger
  cursor default !important // @stylint ignore
  display inline-block

  *[aria-label]
    display none

.tooltip__trigger--enabled
  cursor help !important // @stylint ignore

  &[href]
    cursor pointer !important // @stylint ignore

.tooltip__content
  background-color $color--white-smoke
  border 1px solid $color--silver
  box-shadow 0 0 spacing(0.5) rgba($color--black, 0.5)
  color $color--black
  font-size smaller
  line-height 1.25
  padding spacing(0.5)
  position absolute
  text-align left
  white-space normal
  width $tooltip--width
  z-index 10

.tooltip__content--top
  bottom 100%

.tooltip__content--bottom
  top 100%

.tooltip__content--left
  left 0

.tooltip__content--right
  right 0

.tooltip__content--center
  left 50%
  margin-left ($tooltip--width * -0.5)

.tooltip__content--middle
  top 50%
  transform translateY(-50%)

  &.tooltip__content--left
    left 100%

  &.tooltip__content--right
    right 100%

.tooltip__heading
  border-bottom 1px solid $color--silver
  display block
  font-family $font--heading
  margin-bottom spacing(0.5)
  padding-bottom spacing(0.25)
  text-transform uppercase

  &:last-child
    margin-bottom 0

.tooltip__text
  display block
