.text-control
  appearance none
  background-color $color--white
  border 2px solid $color--white
  border-radius 0
  color $color--black
  display block
  font-family inherit
  font-size inherit
  height rem(64)
  opacity 0.9
  padding spacing(0.9)
  width 100%

  &:focus
    opacity 1
    outline 0

  &[disabled]
  &.is-disabled
    opacity 0.75
    pointer-events none
    user-select none

.text-control--multi-line
  height auto
  resize vertical

.text-control--error
  border-color $color--error

.text-control--notice
  border-color $color--notice

.text-control--success
  border-color $color--success

.text-control--warning
  border-color $color--warning
