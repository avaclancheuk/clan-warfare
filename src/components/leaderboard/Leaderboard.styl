.leaderboard
  color $color--white
  margin 0 spacing(-0.5)
  position relative

  +width-min($mq--tablet)
    margin 0 spacing(-1)

.leaderboard__row-wrapper
  &[data-first]:before
  &[data-last]:after
    content ''
    display block
    height spacing(0.5)
    margin 0 spacing(0.5)

    +width-min($mq--tablet)
      margin 0 spacing(1)

.leaderboard__row
  display block
  border-bottom 1px solid $color--nero
  line-height 1.2
  margin 0 spacing(0.5)
  position relative
  z-index 1

  +width-min($mq--tablet)
    margin 0 spacing(1)

  &[data-result]:before
    content ''
    position absolute
    top 0
    left -2px
    bottom 0
    width 2px

  &[data-result=true]:before
    background $color--silver

  &[data-result=win]:before
    background $color--success

  &[data-result=loss]:before
    background $color--error

  &[data-even]
    .leaderboard__header
    .leaderboard__body
      background $color--eclipse

    +width-min($mq--tablet--landscape)
      background $color--eclipse

  $hover-shadow = 0 spacing(0.5) spacing(1) rgba($color--black, 0.2), 0 spacing(0.25) spacing(0.25) rgba($color--black, 0.25), 0 spacing(-0.25) spacing(0.25) rgba($color--black, 0.25)

  &:hover
    z-index 4

    .leaderboard__header
      background $color--white-smoke
      box-shadow $hover-shadow
      color $color--black
      z-index 2

    .leaderboard__icon
      transform scale(1.25)

    .leaderboard__body:first-child
      background $color--white-smoke
      box-shadow $hover-shadow
      color $color--black

    +width-min($mq--tablet--landscape)
      background $color--white-smoke
      box-shadow $hover-shadow
      color $color--black

  +width-min($mq--tablet--landscape)
    background $color--nightrider

.leaderboard__header
  background $color--nightrider
  border-bottom 1px solid $color--nero
  white-space nowrap

  +width-min($mq--tablet--landscape)
    background none !important // @stylint ignore
    box-shadow none !important // @stylint ignore
    border-bottom 0
    display inline-block
    position relative
    vertical-align middle
    width 35%
    z-index 2

    &:last-child
      width 100%

.leaderboard__body
  background $color--nightrider
  margin-left rem(48)

  &:first-child
    margin-left 0
    width 100%

  +width-min($mq--tablet)
    margin-left rem(60)

  +width-min($mq--tablet--landscape)
    background none !important // @stylint ignore
    display inline-block
    margin-left 0
    position relative
    vertical-align middle
    width 65%
    z-index 1

.leaderboard__icon
  display inline-block
  vertical-align middle
  height rem(48)
  width rem(48)

  +width-min($mq--tablet)
    height rem(60)
    width rem(60)

  +width-min($mq--desktop)
    height rem(75)
    width rem(75)

.leaderboard__link
  display inline-block

  span
    display inline-block
    border-bottom 1px solid transparent

  &[href]:focus
  &[href]:hover
    span
      border-color $color--terracotta

.leaderboard__medal
  display none

  +width-min($mq--tablet)
    display inline-block
    padding-left spacing(0.75)
    margin-right spacing(-0.25)

    .medal
      padding spacing(0.25)

.leaderboard__name
  display inline-block
  vertical-align middle
  padding spacing(0.25) spacing(1)

  +width-min($mq--tablet)
    padding-top spacing(0.5)
    padding-bottom spacing(0.5)

.leaderboard__platforms
  display inline-block
  fill $color--silver
  margin-left spacing(0.5)
  margin-right spacing(-1)
  padding spacing(0.5) spacing(0.25)
  padding-right 0

.leaderboard__tags
  display inline-block

.leaderboard__clan-tag
  color $color--silver
  display none
  padding spacing(0.5) spacing(1)
  position absolute
  top 50%
  right 0
  transform translateY(-50%)

  +width-min($mq--tablet)
    display block
    padding spacing(1)

.leaderboard__stats
  display flex
  flex-wrap wrap
  align-items center
  padding spacing(0.5)

  +width-min($mq--tablet--landscape)
    justify-content flex-end
    padding 0
    text-align right

.leaderboard__stat
  display inline-block
  flex 1 1 0
  padding 0 spacing(0.5) spacing(0.5)
  position relative
  text-align left
  white-space nowrap

  +width-min($mq--tablet--landscape)
    max-height rem(60)
    max-width 25%
    padding spacing(1) spacing(1) spacing(1) 0
    text-align right

  &[data-prefix]:before
    content attr(data-prefix)
    color $color--silver
    display block
    font-size x-small
    text-transform uppercase

    +width-min($mq--tablet--landscape)
      position relative
      margin-top rem(-12)

  &[data-exact]
    cursor help

    &:after
      content attr(data-exact)
      display none

    &:hover
      span
        display none

      &:after
        display block

.leaderboard__stat-suffix
  color $color--silver
  display block
  font-size smaller
  line-height 1

.leaderboard__stat--game
  flex auto
  max-width none
  text-align left
  width 100%

  +width-min($mq--tablet--landscape)
    padding spacing(0.5) spacing(1)
    width 35%

.leaderboard__stat--medals
  flex auto
  max-width none
  padding 0
  text-align right
  width 75%

  li
    text-align left
    width 33.333%

  .medal
    margin 0 spacing(0.5)

  +width-min($mq--tablet--landscape)
    max-height none
    padding 0 spacing(0.5)
    width 65%

    li
      text-align right
      width 25%

.leaderboard__stat--modifiers
  flex auto
  max-width none
  padding 0
  text-align right
  width 100%

  +width-min($mq--tablet--landscape)
    max-height none
    padding spacing(0.5)
    width 65%

.leaderboard__external
  display inline-block
  fill currentColor
  margin-left spacing(0.25)
  vertical-align bottom
  width rem(20)
  height rem(20)

  &:first-child
    margin-left 0

  a[href]:hover &
    fill $color--terracotta
    transform scale(1.25)

.leaderboard--active
  &:before
  &:after
    content ''
    background linear-gradient(rgba($color--black, 0.75), rgba($color--black, 0))
    height spacing(0.5)
    opacity 0
    position absolute
    left spacing(0.5)
    right spacing(0.5)
    z-index 1

    +width-min($mq--tablet)
      left spacing(1)
      right spacing(1)

  &:before
    top 0

  &:after
    bottom 0
    transform scaleY(-1)

  &[data-overflow-top=true]:before
  &[data-overflow-bottom=true]:after
    opacity 1

  .leaderboard__container
    height auto !important // @stylint ignore
    max-height rem(500)

.leaderboard--cutout
  margin-top spacing(-1) !important // @stylint ignore
  margin-left spacing(0.5)
  margin-right spacing(0.5)

  +width-min($mq--tablet)
    margin-top spacing(-2) !important // @stylint ignore
    margin-left spacing(1)
    margin-right spacing(1)

  +width-min($mq--desktop)
    margin-left spacing(2)
    margin-right spacing(2)

.leaderboard--extra-columns
  .leaderboard__stat--game
  .leaderboard__stat--medals
    text-align left
    white-space normal

  .leaderboard__stats
    justify-content flex-start
    padding spacing(0.5)

  .leaderboard__stat
    padding 0 spacing(0.5) spacing(0.5)
    text-align left

    &[data-prefix]:before
      margin-top 0

  .leaderboard__stat--medals
    padding 0
    width 100%

    li
      width auto

    .medal
      margin spacing(0.5)

  .leaderboard__stat--game
    width 100%
