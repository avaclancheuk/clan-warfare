.modifier
  background $color--black
  border-radius 100%
  color $color--white
  font-size rem(45)
  fill currentColor
  display block
  height 1em
  line-height 1em
  position relative
  width 1em
  text-align center
  vertical-align top

  &:hover
    transform scale(1.1)

  +width-min($mq--tablet)
    font-size rem(60)

.modifier__label
  display inline-block
  font-size 0.333em
  vertical-align top

  svg + &
    background $color--primary
    border-radius $spacing--default
    font-size x-small
    line-height 1
    min-width 2em
    padding $spacing--quarter
    position absolute
    bottom 0
    right -0.5em
    text-align center

.modifier__icon
  display block
  width 1em
  height 1em

.modifier--small
  font-size rem(30)

  svg + .modifier__label
    display none

.modifier-list
  position relative

  .modifier
    margin $spacing--half

  .modifier--small
    margin-left $spacing--quarter
    margin-right $spacing--quarter
